{% extends 'base2.html.twig' %}

{% block body %}
<div class="page-content-wrap">
                
    <div class="row">
        <div class="col-md-12">               
			{{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}  
				<div class="panel panel-default">
		            <div class="panel-heading">
		                <h3 class="panel-title"><strong>{% if edit %}{{'edit'|trans}}{% else %}{{'add'|trans}}{% endif %} </strong> {{'transport'|trans}}</h3>
		            </div>
		            <div class="panel-body">
						<div class="form-group">
							{{ form_label(form.nom , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.nom ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.nom) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.depart , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.depart ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.depart) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.trajet , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
						    	{{ form_widget(form.trajet ,{ 'attr': {'class': 'form-control'} }) }}
						    	{{ form_errors(form.trajet) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.heureDepart , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-clock-o"></span></span>
						    		{{ form_widget(form.heureDepart ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.heureDepart) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.capacite , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.capacite ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.capacite) }}
						    </div>
						</div>
					</div>
			        <div class="panel-footer">                                    
			            <button class="btn btn-primary pull-right">Valider</button>
			        </div>
			    </div>
				{{ form_end(form) }}
			</div>
	    </div>                     
	</div>
{% endblock %}


{% block javascripts %}
	<script type='text/javascript' src="{{ asset('js/plugins/bootstrap/bootstrap-select.js') }}"></script>
{% endblock %}

