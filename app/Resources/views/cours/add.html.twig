{% extends 'base2.html.twig' %}

{% block body %}
<div class="page-content-wrap">
                
    <div class="row">
        <div class="col-md-12">  
	{{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					{{'evaluation.add'|trans}}
				</h3>
			</div>
			<div class="panel-body">
				<div class="form-group">
				{{ form_label(form.titre,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
				<div class="col-md-6 col-xs-12">
					<div class="input-group">
						<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
				  			{{ form_widget(form.titre ,{ 'attr': {'class': 'form-control'} }) }}
					</div>
		    			{{ form_errors(form.titre) }}
		    	</div>
				</div>
				<div class="form-group">
				{{ form_label(form.devoir,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
				<div class="col-md-6 col-xs-12">
					<a class="file-input-wrapper btn btn-default  fileinput">
                       	<span>{{'global.parcourir'|trans}}</span>
                       	{{ form_widget(form.devoir,{ 'label_attr': {'class': 'fileinput'} } ) }}
				  	</a>
					
		    		{{ form_errors(form.devoir) }}
		    	</div>
				</div>
				<div class="form-group">
					{{ form_label(form.support,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
					<div class="col-md-6 col-xs-12">
						<a class="file-input-wrapper btn btn-default  fileinput">
                            <span>{{'global.parcourir'|trans}}</span>
                            {{ form_widget(form.support,{ 'label_attr': {'class': 'fileinput'} } ) }}
                        </a>
                        {{ form_errors(form.support) }}
					</div>
				</div>
				<div class="form-group">
					{{ form_label(form.annexe,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
					<div class="col-md-6 col-xs-12">
						
					  	<a class="file-input-wrapper btn btn-default  fileinput">
					  		<span>{{'global.parcourir'|trans}}</span>
					  		{{ form_widget(form.annexe,{ 'label_attr': {'class': 'fileinputForm'} } ) }}
					  	</a>                
						{{ form_errors(form.annexe) }}
				    </div>
				</div>
				<input type="hidden" name="idClasse" value="{{idClasse}}">
				<input type="hidden" name="idMatiere" value="{{idMatiere}}">
			</div>
			<div class="panel-footer">                                    
				<input type="submit" value="{{'add'|trans}}" class="btn btn-primary pull-right" />
			</div>
	{{ form_end(form) }}
</div>

{% endblock %}


{% block javascripts %}

<script type="text/javascript" src="{{asset('js/plugins/bootstrap/bootstrap-file-input.js')}}"></script>
<script type="text/javascript">

  $( document ).ready( function() {

//$('#fileinputForm').fileinput();
            });
     
</script>

{% endblock %}