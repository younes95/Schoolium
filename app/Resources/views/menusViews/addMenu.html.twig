{% extends 'base2.html.twig' %}

{% block body %}
<div class="page-content-wrap">
                
    <div class="row">
        <div class="col-md-12">               
			{{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}  
				<div class="panel panel-default">
		            <div class="panel-heading">
		                <h3 class="panel-title"><strong>{% if edit %}{{'edit'|trans}}{% else %}{{'add'|trans}}{% endif %} </strong> {{'menu'|trans}}</h3>
		            </div>
		            <div class="panel-body">

						<div class="form-group">
							{{ form_label(form.jour , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
						    	{{ form_widget(form.jour ,{ 'attr': {'class': 'form-control select'} }) }}
						    	{{ form_errors(form.jour) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.menu , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
						    	{{ form_widget(form.menu ,{ 'attr': {'class': 'form-control'} }) }}
						    	{{ form_errors(form.menu) }}
						    </div>
						</div>
					</div>
			        <div class="panel-footer">                                    
			            <button class="btn btn-primary pull-right">Valider</button>
			        </div>
			    </div>
				{{ form_end(form) }}
			</div>
	    </div>                     
	</div>
{% endblock %}


{% block javascripts %}
	<script type='text/javascript' src="{{ asset('js/plugins/bootstrap/bootstrap-select.js') }}"></script>
{% endblock %}
