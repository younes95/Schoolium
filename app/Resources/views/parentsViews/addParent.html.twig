{% extends 'base2.html.twig' %}

{% block body %}
<div class="page-content-wrap">
                
    <div class="row">
        <div class="col-md-12">               
			{{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}  
				<div class="panel panel-default">
		            <div class="panel-heading">
		                <h3 class="panel-title"><strong>{% if edit %}{{'edit'|trans}}{% else %}{{'add'|trans}}{% endif %} </strong> {{'parent'|trans}}</h3>
		            </div>
		            <div class="panel-body">
						<div class="form-group">
							{{ form_label(form.nom , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.nom ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.nom) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.prenom , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.prenom ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.prenom) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.nomMere , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.nomMere ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.nomMere) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.prenomMere , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.prenomMere ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.prenomMere) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.cIN , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.cIN ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.cIN) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.professionPere , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-building"></span></span>
						    		{{ form_widget(form.professionPere ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.professionPere) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.professionMere , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-building"></span></span>
						    		{{ form_widget(form.professionMere ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.professionMere) }}
						    </div>
						</div>
						
						<div class="form-group">
							{{ form_label(form.adresse , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
						    	{{ form_widget(form.adresse ,{ 'attr': {'class': 'form-control'} }) }}
						    	{{ form_errors(form.adresse) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.codePostal , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-map-marker"></span></span>
						    		{{ form_widget(form.codePostal ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.codePostal) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.telephone , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-phone"></span></span>
						    		{{ form_widget(form.telephone ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.telephone) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.mobil , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-mobile"></span></span>
						    		{{ form_widget(form.mobil ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.mobil) }}
						    </div>
						</div>
						
						<div class="form-group">
							{{ form_label(form.email , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-envelope"></span></span>
						    		{{ form_widget(form.email ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.email) }}
						    </div>
						</div>
						
						<div class="form-group">
							{{ form_label(form.username , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-user"></span></span>
						    		{{ form_widget(form.username ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.username) }}
						    </div>
						</div>

					{% if edit==false %}
						<div class="form-group">
							{{ form_label(form.plainPassword.first , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-unlock-alt"></span></span>
						    		{{ form_widget(form.plainPassword.first ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.plainPassword.first) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.plainPassword.second , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-unlock-alt"></span></span>
						    		{{ form_widget(form.plainPassword.second ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.plainPassword.second) }}
						    </div>
						</div>
					{% else %}
					{% do form.plainPassword.setRendered %}
					{% endif %}	
				</div>
		        <div class="panel-footer">                                    
		            <button class="btn btn-primary pull-right">Valider</button>
		        </div>
		    </div>
			{{ form_end(form) }}
		</div>
    </div>                     
</div>
{% endblock %}


{% block javascripts %}
	<script type='text/javascript' src="{{ asset('js/plugins/bootstrap/bootstrap-select.js') }}"></script>
	<script type='text/javascript' src="{{ asset('js/plugins/bootstrap/bootstrap-file-input.js') }}"></script>
{% endblock %}
